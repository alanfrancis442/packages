{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
